{
  "name": "SpotiMark",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Bookmark your playlists",
  "permissions": [
    "contextMenus",
    "declarativeContent",
    "activeTab",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "css": [
        "styles.css"
      ],
      "js": [
        "content.js"
      ],
      "matches": [
        "https://open.spotify.com/playlist/*"
      ]
    }
  ]
}